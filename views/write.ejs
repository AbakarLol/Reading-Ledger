<%- include('partials/header.ejs') %>
<body>
    <div class="navbar">
        <div>
            <form action="/sort" method="post" >
                <label for="sort">Sort by:</label>
                <select class="sorting" onchange="this.form.submit()" name="sort" id="sort">
                    <option value="rate">By Rate</option>
                    <option value="title">By Name</option>
                    <option value="date">By Date</option>
                </select>
               
            </form>
        </div>
        <div>
            <form  action="/write" method="post" >
            <button type="submit" class="write" >  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#F5F7F8" class="bi bi-pencil-square" viewBox="0 0 16 16">
                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z"/>
              </svg>  Write  </button>
            </form>
        </div>
    </div>

    <div class="main">
        <div class="header">
        </div>
        <div class="overviews">
        <div class="modify">
            <% if (locals.data){ %>
                <form class="modify-form" action="/modify/<%= data.id %>" method="post" >
                <div>
                <label for="title">Title:</label>
                <input type="text" name="title" id="title" value = "<%= data.title  %>" required>
                </div>
                <div>
                <label for="authors">Authors:</label required>
                <input type="text" name="authors" id="authors" value = "<%= data.authors  %>" required>
                </div>
                <div class="small">
                    <div>
                    <label for="isbn">ISBN:</label>
                    <input type="text" name="isbn" id="isbn" value = "<%= data.isbn  %>" required>
                    </div>
                    <div>
                    <label for="read_date">Date:</label>
                    <input type="date" name="read_date" id="read_date" value = "<%= data.read_date  %>" required>
                    </div>
                    <div>
                    <label for="rate">Rate:</label>
                    <input type="number" max="10" min="0" name="rate" id="rate" value = "<%= data.read_rate %>" required>
                    </div>
                </div>
                <div>
                <label for="overview">Overview:</label>
                <textarea name="overview" id="overview" required> <%= data.overview  %> </textarea>
                </div>
                <div>
                <label for="note">Note:</label>
                <textarea name="note" id="note" required> <%= data.note  %> </textarea>
                </div>
                <input type="submit" id="submit" value="submit">
                </form>
            <% } else{ %>

                <form class="modify-form" action="/modify" method="post" >
                <div>
                    <label for="title">Title:</label>
                    <input type="text" name="title" id="title"  required>
                    </div>
                    <div>
                    <label for="authors">Authors:</label>
                    <input type="text" name="authors" id="authors"  required>
                    </div>
                    <div class="small">
                        <div>
                        <label for="isbn">ISBN:</label>
                        <input type="text" name="isbn" id="isbn" required>
                        </div>
                        <div>
                        <label for="read_date">Date:</label>
                        <input type="date" name="read_date" id="read_date" required>
                        </div>
                        <div>
                        <label for="rate">Rate:</label>
                        <input type="number" max="10" min="0" name="rate" id="rate" required >
                        </div>
                    </div>
                    
                    <div>
                    <label for="overview">Overview:</label>
                    <textarea name="overview" id="overview" required> <%=  %> </textarea>
                    </div>
                    <div>
                    <label for="note">Note:</label>
                    <textarea name="note" id="note" required> </textarea>
                    </div>
                    <input type="submit" id="submit" value="submit" required>
                </form>
            <% } %>
            
        
    </div>
    </div>
    </div>
</body>
</html>